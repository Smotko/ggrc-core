{{#switch attr_name}}
  {{#case 'email'}}
    <div class="email tree-title-area">
      <span class="email">{{instance.email}}</span>
      {{#if_equals system_wide_role 'No Access'}}
        <span class="user-disabled">
                      (Inactive user)
                    </span>
      {{/if_equals}}
    </div>
  {{/case}}
  {{#case 'title'}}
    <div class="email tree-title-area">
      {{{firstnonempty instance.name instance.email ''}}}
    </div>
  {{/case}}
  {{#case 'authorizations'}}
    <div class="role tree-title-area">
      <div class="item-data">
        <div class="tree-title-area">
          {{log instance}}
          {{log page_instance}}
          {{#page_roles instance}}
            <span class="role" title="{{long}}">
              {{short}} {{#count}} + {{count}}{{/count}}
            </span>
          {{/page_roles}}
        </div>
      </div>
    </div>
  {{/case}}
  {{#default}}
    {{get_default_attr_value attr_name instance}}
  {{/default}}
{{/switch}}
