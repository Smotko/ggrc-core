<h6>Evidence &amp; URLs</h6>
<mapped-objects {visible-items}="limit" {parent-instance}="instance" mapping="all_documents" {empty-message}="noItemsText">
    <action-toolbar {document}="instance" class="action-toolbar">
        <document-object-list-item class="action-toolbar__content-item" {instance}="document"></document-object-list-item>
      {{#if showAction}}
        <div class="action-toolbar__controls">
        {{#is_allowed 'update' parentInstance context='for'}}
              <unmap-button {destination}="parentInstance" {source}="document" object-prop="relationsips" mapping-type="ObjectDocument">
                 <action-toolbar-control><i class="fa fa-trash"></i></action-toolbar-control>
              </unmap-button>
        {{/is_allowed}}
        </div>
        {{/if}}
     </action-toolbar>
</mapped-objects>
<div>
{{#if_mapping_ready "audits" instance}}
  {{#is_allowed 'update' instance context='for'}}
    <div class="attachment-upload-control">
      {{{render_hooks "Request.gdrive_evidence_storage"}}}
      {{#toggle show_new_object_form}}
          <ggrc-quick-add
                  {parent_instance}="instance"
                  join_model="Relationship"
                  quick_create="create_url">
            {{#prune_context}}
                <div class="inline-edit inline-edit--active">
                    <div class="inline-edit__content">
                        <input tabindex="3" type="text" name="instance" placeholder="Add URL">
                        <input type="hidden" name="role_name" value="Auditor"/>
                        <ul class="inline-edit__controls inline-edit__controls--edit-mode">
                            <li>
                                <a href="javascript://" class="{{#if disabled}}disabled{{/if}}"
                                   data-toggle="submit" {{toggle_button 'modal:success'}}>
                                    <i class="fa fa-check"></i>
                                </a>
                            </li>
                            <li>
                                <a href="javascript://" {{toggle_button}}>
                                    <i class="fa fa-times"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            {{/prune_context}}
          </ggrc-quick-add>
      {{else}}
          <button class="btn btn-small btn-gray" {{toggle_button}}>Add URL</button>
      {{/toggle}}
    </div>
  {{/is_allowed}}
{{/if_mapping_ready}}
</div>
